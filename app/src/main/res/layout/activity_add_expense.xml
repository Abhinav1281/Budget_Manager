    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/category_layout"
        app:layout_constraintTop_toBottomOf="@id/calc_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_weight="1"
        android:padding="10dp"
        android:background="@drawable/bg_basic"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:id="@+id/icon_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:weightSum="10"

                android:orientation="vertical">
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:id="@+id/btn_food"
                android:foregroundGravity="center_horizontal"
                android:src="@drawable/ic_food"
                android:background="@drawable/button_bg"
                app:tint="@color/Red" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="FOOD"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:weightSum="10"

                android:orientation="vertical">
                <ImageButton

                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:id="@+id/btn_shopping"
                    android:background="@drawable/button_bg"
                    android:foregroundGravity="center_horizontal"
                    android:src="@drawable/ic_shopping"
                    app:tint="@color/Pink" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="SHOP"
                    android:textColor="@color/white"
                     />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:weightSum="10"

                android:orientation="vertical">
                <ImageButton
                    android:layout_width="80dp"
                    android:layout_weight="7"
                    android:layout_height="0dp"
                    android:id="@+id/btn_travel"
                    android:background="@drawable/button_bg"
                    android:foregroundGravity="center_horizontal"
                    android:src="@drawable/ic_travel"
                    app:tint="@color/Blue" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="TRAVEL"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:weightSum="10"

                android:orientation="vertical">
                <ImageButton
                    android:layout_width="80dp"
                    android:layout_weight="7"
                    android:layout_height="0dp"
                    android:id="@+id/btn_mobile"
                    android:background="@drawable/button_bg"
                    android:foregroundGravity="center_horizontal"
                    android:src="@drawable/ic_mobile"
                    app:tint="@color/Green" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="GADGET"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon_first"
            android:id="@+id/icon_second"
            android:orientation="horizontal"
            android:weightSum="4">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:weightSum="10"

                android:orientation="vertical">
                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:id="@+id/btn_general"
                    android:background="@drawable/button_bg"
                    android:src="@drawable/ic_home"
                    app:tint="@color/Yellow" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="GENERAL"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:weightSum="10"

                android:orientation="vertical">
                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:id="@+id/btn_pet"
                    android:background="@drawable/button_bg"
                    android:src="@drawable/ic_pets"
                    app:tint="@color/Orange" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="PETS"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:weightSum="10"

                android:orientation="vertical">
                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:id="@+id/btn_game"
                    android:background="@drawable/button_bg"
                    android:src="@drawable/ic_game"
                    app:tint="@color/Purple" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="GAMES"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:weightSum="10"

                android:orientation="vertical">
                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:id="@+id/btn_sports"
                    android:background="@drawable/button_bg"
                    android:src="@drawable/ic_sports"
                    app:tint="@color/Teal" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="SPORTS"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:id="@+id/open_calendar"
        android:src="@drawable/ic_calendar"
        android:background="@color/black"
        app:tint="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/black"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:alpha="0.0"
        android:visibility="gone">

        <com.github.florent37.singledateandtimepicker.SingleDateAndTimePicker
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:id="@+id/date_picker"
            app:picker_curved="true"
            app:picker_cyclic="true"
            app:picker_visibleItemCount="8"
            app:picker_displayHours="false"
            app:picker_displayMinutes="false"
            app:picker_displayYears="true"
            app:picker_displayDaysOfMonth="true"
            app:picker_displayDays="false"
            app:picker_displayMonth="true"
            app:picker_selectedTextColor="@color/Yellow"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_final_btn"
            android:text="OK"
            android:textColor="@color/white"
            android:backgroundTint="@color/Blue"
            android:textSize="20sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/date_picker"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date_picker_cancel"
            android:layout_below="@id/date_picker"
            android:layout_alignParentStart="true"
            android:text="Cancel"
            android:backgroundTint="@color/Red"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>